---
import { TabItem, Tabs } from "@astrojs/starlight/components";
import { Code } from "@astrojs/starlight/components";

interface Props {
  /**
   * The remote/uninstalled command to run with the package manager
   */
  command: string;
}

const { command } = Astro.props;
---

<Tabs syncKey="package-manager">
  <TabItem label="npm" icon="npm">
    <Code code={`npx ${command}`} lang="sh" frame="terminal" />
  </TabItem>

  <TabItem label="pnpm" icon="pnpm">
    <Code code={`pnpm dlx ${command}`} lang="sh" frame="terminal" />
  </TabItem>
  <TabItem label="Yarn" icon="seti:yarn">
    <Code code={`yarn dlx ${command}`} lang="sh" frame="terminal" />
  </TabItem>
</Tabs>
